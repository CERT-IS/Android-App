<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.certis" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- [END gcm_permission] -->
    <application
        android:name=".teamproject.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

            <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 추가 액티비티 -->


        <!-- 스플래시 엑티비티 -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" />
        <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
        <activity
            android:name=".NoticeActivity"
            android:label="@string/app_name" />
        <!-- 네비게이션드로어(툴바) 엑티비티 -->
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/app_name" />

        <!-- 일단 공지사항 글쓰기 엑티비티 -->
        <activity
            android:name=".EditActivity"
            android:label="@string/app_name" />

        <!-- 로그인 엑티비티 -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <!-- 회원가입 엑티비티 -->
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name" />
        <!-- 캘린더 엑티비티 -->
        <activity
            android:name=".CalendarActivity"
            android:label="@string/app_name" />
        <!-- 링크 엑티비티 -->
        <activity
            android:name=".LinkActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".LinkWriteActivity"
            android:label="@string/app_name" />
        <!-- 인덱스(홈) 엑티비티 -->
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name" />
        <!-- 팀 프로젝트 엑티비티 -->
        <activity
            android:name=".TeamActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TeamWriteActivity"
            android:label="@string/app_name" />
        <!-- Gallery 액티비티 -->
        <activity
            android:name=".GalleryActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".GalleryWriteActivity"
            android:label="@string/app_name" />

        <!-- GCM -->
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.certis" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener_service] -->
        <service
            android:name=".gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener_service] -->


        <!-- [START instanceId_listener_service] -->
        <service
            android:name=".gcm.MyInstanceIDListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener_service] -->


        <!-- [START gcm_registration_service] -->
        <service
            android:name=".gcm.RegistrationIntentService"
            android:exported="false" />
        <!-- [END gcm_registration_service] -->
        <activity android:name=".GCMActivity" >
        </activity>
    </application>

</manifest>
