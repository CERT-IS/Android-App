<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.certis">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".timproject.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

            <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />
        <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
        <activity android:name=".NoticeActivity" />
        <activity android:name=".NavigationDrawerActivity" />
        <activity android:name=".EditActivity" />

        <!-- 추가 액티비티 -->

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".CalendarActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".LinkActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".LinkWriteActivity"
            android:label="@string/app_name"></activity>
        <activity android:name=".IndexActivity"></activity>

        <!--팀 프로젝트 엑티비티-->
        <activity
            android:name=".TimActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".TimWriteActivity"
            android:label="@string/app_name"></activity>
        <!-- Gallery 액티비티 -->
        <activity
            android:name=".GalleryActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".GalleryWriteActivity"
            android:label="@string/app_name"></activity>

    </application>

</manifest>
