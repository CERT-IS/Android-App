<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--CustomActionBarTheme 기본 Theme를 정의하고 actionBarStyle 속성을 추가하여 MyActionBar의 속성을 참조. -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name = "android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!--MyActionBar는  background 의 색상을 변경한다.       -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/main_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!--MyActionBarTitleText 속성이 추가 되었다. ActionBar의 Textcolor를 @color/actionbar_text를 값으로 하고 있다.-->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>



